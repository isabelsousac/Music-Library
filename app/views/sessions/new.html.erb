<h1>Welcome back!</h1>

<% flash.each do |type, msg| %>
    <div class="alert alert-info"> <%= msg %> </div>
<% end %>

<%= form_tag login_path do %>
    <%= label_tag :email %>
    <%= email_field_tag :email %>

    <%= label_tag :password %>
    <%= password_field_tag :password %>

    <%= submit_tag 'Sign in' %>
<% end %>